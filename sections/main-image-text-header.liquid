            alt="{{ section.settings.flavor4.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.flavor4.width }}"
            height="{{ section.settings.flavor4.height}}"
            class="header_label_sizing flavoractive"
          >
      </div>
    </div>
      {%- endif -%}
</div>

