      <div class="image-with-text__media image-with-text__media--{{ section.settings.height }} media height-150p  border-radius-25 slight-box-shadow">
          <img
            srcset="https://cdn.shopify.com/s/files/1/0594/0897/4011/files/Organic_Coconut_Matcha_Latte_Mix_Header_Label_SVG.svg?v=1630494060"
            
